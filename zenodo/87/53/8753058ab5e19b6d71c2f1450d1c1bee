ives.", "access_right": "restricted", "creators": [{"name": "Woodford, Darragh J.", "affiliation": null}, {"name": "Richardson, David M.", "affiliation": null}, {"name": "MacIsaac, Hugh J.", "affiliation": null}, {"name": "Mandrak, Nicholas E.", "affiliation": null}, {"name": "van Wilgen, Brian W.", "affiliation": null}, {"name": "Wilson, John R. U.", "affiliation": null}, {"name": "Weyl, Olaf L. F.", "affiliation": null}], "keywords": ["Chapter 6", "biodiversity", "environment assessment", "IPBES", "Alien Invasive Species Assessment AIS", "invasive species"], "related_identifiers": [{"identifier": "hash://md5/75c7f35073b4b70d3bfccc4dd599dc19", "relation": "hasVersion", "scheme": "url"}, {"identifier": "hash://sha256/944f27fef98e6bc19edd8949e6bd250d72dfdec26fb797d08a9e6600f52ae618", "relation": "hasVersion", "scheme": "url"}, {"identifier": "zotero://select/groups/2352922/items/8FSDJWMU", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://zotero.org/groups/2352922/items/8FSDJWMU", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://linker.bio/cut:hash://md5/240b96179f855329fe2cb0828b156ae1!/b162811-164932", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "hash://md5/359bd494433933b868f85e88d3437f76", "relation": "isPartOf", "scheme": "url"}, {"identifier": "10.3897/neobiota.31.10038", "relation": "isVariantFormOf", "resource_type": "publication", "scheme": "doi"}, {"identifier": "10.5281/zenodo.7430682", "relation": "isCitedBy", "resource_type": "publication-report", "scheme": "doi"}, {"identifier": "10.5281/zenodo.1410543", "relation": "isCompiledBy", "resource_type": "software", "scheme": "doi"}], "resource_type": {"title": "Journal article", "type": "publication", "subtype": "article"}, "journal": {"pages": "63-86", "title": "NeoBiota", "volume": "31"}, "alternate_identifiers": [{"identifier": "hash://md5/75c7f35073b4b70d3bfccc4dd599dc19"}, {"identifier": "urn:lsid:zotero.org:groups:2352922:items:8FSDJWMU"}, {"