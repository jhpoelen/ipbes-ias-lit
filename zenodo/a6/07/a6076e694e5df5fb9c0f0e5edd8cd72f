al decades into the future.", "access_right": "restricted", "creators": [{"name": "Essl, Franz", "affiliation": null}, {"name": "Dullinger, Stefan", "affiliation": null}, {"name": "Rabitsch, Wolfgang", "affiliation": null}, {"name": "Hulme, Philip E.", "affiliation": null}, {"name": "H\u00fclber, Karl", "affiliation": null}, {"name": "Jaro\u0161\u00edk, Vojt\u011bch", "affiliation": null}, {"name": "Kleinbauer, Ingrid", "affiliation": null}, {"name": "Krausmann, Fridolin", "affiliation": null}, {"name": "K\u00fchn, Ingolf", "affiliation": null}, {"name": "Nentwig, Wolfgang", "affiliation": null}, {"name": "Vil\u00e0, Montserrat", "affiliation": null}, {"name": "Genovesi, Piero", "affiliation": null}, {"name": "Gherardi, Francesca", "affiliation": null}, {"name": "Desprez-Loustau, Marie-Laure", "affiliation": null}, {"name": "Roques, Alain", "affiliation": null}, {"name": "Py\u0161ek, Petr", "affiliation": null}], "keywords": ["Chapter 1", "Chapter 3", "Chapter 4", "Chapter 6", "biodiversity", "environment assessment", "IPBES", "Alien Invasive Species Assessment AIS", "invasive species"], "related_identifiers": [{"identifier": "hash://md5/77175d30f5ed399ca005db34b955702b", "relation": "hasVersion", "scheme": "url"}, {"identifier": "hash://sha256/9cdb8dab4a97945db5dae5d47da28becc82f661f97275c150e35a014a7930b09", "relation": "hasVersion", "scheme": "url"}, {"identifier": "zotero://select/groups/2352922/items/ITJAFPQE", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://zotero.org/groups/2352922/items/ITJAFPQE", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://linker.bio/cut:hash://md5/5544e89d64032e3f08baa030507ac154!/b251784-254351", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "hash://md5/359bd494433933b868f85e88d3437f76", "relation": "isPartOf", "scheme": "url"}, {"identifier": "10.1073/pnas.1011728108", "relation": "isVariantFormOf", "resource_type": "publication", "scheme": "doi"}, {"identifier": "10.5281/