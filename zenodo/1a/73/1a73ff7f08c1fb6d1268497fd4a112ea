ffects.", "access_right": "restricted", "creators": [{"name": "Geraldi, Nathan R.", "affiliation": null}, {"name": "Anton, Andrea", "affiliation": null}, {"name": "Lovelock, Catherine E.", "affiliation": null}, {"name": "Duarte, Carlos M.", "affiliation": null}], "keywords": ["Chapter 4", "biodiversity", "environment assessment", "IPBES", "Alien Invasive Species Assessment AIS", "invasive species"], "related_identifiers": [{"identifier": "hash://md5/204adc6ab9a56c6bb3c6925b9d86bb92", "relation": "hasVersion", "scheme": "url"}, {"identifier": "hash://sha256/8aefe9bc17f7424350719bc18e3d9fb7e836faab64f0213522ca7e5ffce9c7eb", "relation": "hasVersion", "scheme": "url"}, {"identifier": "zotero://select/groups/2352922/items/A3B4TNTR", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://zotero.org/groups/2352922/items/A3B4TNTR", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://linker.bio/cut:hash://md5/0d607b15b6708bdd29fba8ef8f76b3bb!/b177671-179819", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "hash://md5/359bd494433933b868f85e88d3437f76", "relation": "isPartOf", "scheme": "url"}, {"identifier": "10.1371/journal.pone.0215691", "relation": "isVariantFormOf", "resource_type": "publication", "scheme": "doi"}, {"identifier": "10.5281/zenodo.7430682", "relation": "isCitedBy", "resource_type": "publication-report", "scheme": "doi"}, {"identifier": "10.5281/zenodo.1410543", "relation": "isCompiledBy", "resource_type": "software", "scheme": "doi"}], "resource_type": {"title": "Journal article", "type": "publication", "subtype": "article"}, "journal": {"issue": "4", "pages": "e0215691", "title": "PLoS ONE", "volume": "14"}, "alternate_identifiers": [{"identifier": "hash://md5/204adc6ab9a56c6bb3c6925b9d86bb92"}, {"identifier": "urn:lsid:zotero.org:groups:2352922:items:A3B4TNTR"}, {"identifier": "10.1371/journal.pone.0215691"}], "communities": [{"id": "ipbes-ias"}, {"id": "biosyslit"}], "relations": {"version": [{"index": 0,