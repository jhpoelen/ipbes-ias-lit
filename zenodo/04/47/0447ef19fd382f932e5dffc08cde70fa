ken.", "access_right": "restricted", "creators": [{"name": "Lindenmayer, David B.", "affiliation": null}, {"name": "Hulvey, Kristin B.", "affiliation": null}, {"name": "Hobbs, Richard J.", "affiliation": null}, {"name": "Colyvan, Mark", "affiliation": null}, {"name": "Felton, Adam", "affiliation": null}, {"name": "Possingham, Hugh", "affiliation": null}, {"name": "Steffen, Will", "affiliation": null}, {"name": "Wilson, Kerrie", "affiliation": null}, {"name": "Youngentob, Kara", "affiliation": null}, {"name": "Gibbons, Philip", "affiliation": null}], "keywords": ["Chapter 3", "biodiversity", "environment assessment", "IPBES", "Alien Invasive Species Assessment AIS", "invasive species"], "related_identifiers": [{"identifier": "hash://md5/8be63e3e055c33000d8d3035dec79a19", "relation": "hasVersion", "scheme": "url"}, {"identifier": "hash://sha256/7b3a5a6766678722a92eed5135181df5c75335028a4e55cf5224cc7fba138692", "relation": "hasVersion", "scheme": "url"}, {"identifier": "zotero://select/groups/2352922/items/CR6ZJXID", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://zotero.org/groups/2352922/items/CR6ZJXID", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://linker.bio/cut:hash://md5/1298169d1b3e63aa64799b606b7c3992!/b131516-133712", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "hash://md5/359bd494433933b868f85e88d3437f76", "relation": "isPartOf", "scheme": "url"}, {"identifier": "10.1111/j.1755-263X.2011.00213.x", "relation": "isVariantFormOf", "resource_type": "publication", "scheme": "doi"}, {"identifier": "10.5281/zenodo.7430682", "relation": "isCitedBy", "resource_type": "publication-report", "scheme": "doi"}, {"identifier": "10.5281/zenodo.1410543", "relation": "isCompiledBy", "resource_type": "software", "scheme": "doi"}], "resource_type": {"title": "Journal article", "type": "publication", "subtype": "article"}, "journal": {"issue": "1", "pages": "28-36", "title": "Conservation Letters", "volume": "5"}, 